%html
  %head
    %title
      BBTTXU
    %link( href='http://fonts.googleapis.com/css?family=Anton|Cherry+Cream+Soda' rel='stylesheet' type='text/css' )
    = stylesheet_link_tag "application"
    = csrf_meta_tags
    %meta( name="viewport" content="width=device-width, initial-scale=1.0" )

  %body
    #page
      #navigation-wrapper
        #navigation
          %nav.nav.top-bar
            %ul
              %li.name
                %h1
                  = li_active_link_to 'Denton, TX', "/"
              %li.toggle-topbar
                %a( href="#" )

            %section

              %ul.right
                %li
                  = link_to "#{@n_shows} Upcoming Shows", '/shows/today'
      .row#content
        = yield

        #footer
          %h1
            %a.bbttxu( href="http://twitter.com/bbttxu/")@bbttxu
            %a( href="https://github.com/bbttxu")writes code
            %a( href="http://maps.google.com/maps?q=Denton,+TX&hl=en&sll=37.0625,-95.677068&sspn=45.601981,81.298828&oq=denton&hnear=Denton,+Texas&t=m&z=12")in Denton,&nbsp;TX

= javascript_include_tag "application"
