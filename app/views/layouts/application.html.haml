%html
  %head
    %title
      = [ yield(:title), "Top Denton"].reject{|x|x.nil? or x.length == 0}.join(" | ")
    %link( href='http://fonts.googleapis.com/css?family=Cherry+Cream+Soda|IM+Fell+English|Ruslan+Display|Changa+One' rel='stylesheet' type='text/css' )
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"

    = csrf_meta_tags
    %meta( name="viewport" content="width=device-width, initial-scale=1.0" )

  %body
    #page
      #navigation-wrapper
        #navigation.contain-to-grid
          %nav.nav.top-bar
            %ul.title-area
              %li.name
                %h1
                  = active_link_to 'TopDenton', root_url
              %li.toggle-topbar
                %a( href="#" ) Menu

            %section.top-bar-section
              %ul.left
                %li= link_to "Food", foods_path
                - if can? :view, User
                  %li= link_to "Users", users_path


              %ul.right
                / %li= link_to "Today", shows_today_path
                / %li= link_to "Calendar", shows_calendar_path
                / %li= link_to "Food", foods_path
                %li
                  - if current_user
                    = link_to signout_path do
                      Sign Out
                      = current_user.name
                      %i.fa.fa-twitter-square
                  - else
                    = link_to "/auth/twitter" do
                      Sign In
                      %i.fa.fa-twitter

      - flash.each do |type, value|
        .flash.container{ :class => type.to_s }
          .row
            .small-12.columns
              %p= value


    = yield
    = render partial: "layouts/footer"


    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-37120893-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

