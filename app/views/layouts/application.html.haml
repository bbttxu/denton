          %ul.three-up.block-grid#navigation
            %li
              %h5
                %span.slabtext= link_to "#{@n_shows} Shows", '/shows'
            %li
              %h5
                %span.slabtext= link_to "#{@n_venues} Venues", '/venues'
            %li
              %h5
                %span.slabtext= link_to "#{@n_artists} Artists", '/artists'

      .row#content
        = yield

    #footer
      .row
        %h1
          I am
