<h1>Listing shows</h1>

<table>
  <tr>
    <th>Doors at</th>
    <th>Price</th>
    <th>Source</th>
    <th>Starts at</th>
    <th>Admittance</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @shows.each do |show| %>
  <tr>
    <td><%= show.doors_at %></td>
    <td><%= show.price %></td>
    <td><%= show.source %></td>
    <td><%= show.starts_at %></td>
    <td><%= show.admittance %></td>
    <td><%= link_to 'Show', show %></td>
    <td><%= link_to 'Edit', edit_show_path(show) %></td>
    <td><%= link_to 'Destroy', show, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

