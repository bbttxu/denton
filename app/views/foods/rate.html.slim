/ tags.html.slim
.row
  .columns.small-9.large-6
    h6 rated
    ol.rated.sortable
      - @rated.highest_rated.reverse.each_with_index do |rating,index|
          li( class="rating-#{rating.id}" id="rating_#{rating.id}")
            h3
              => rating.food.name
              - if current_user and rating.rated_by?(current_user)
                small= rating.user_mark(current_user)

    h6 unrated
    ul.unrated.sortable
      - @ratings.each do |rating|
        - unless rating.rated_by? current_user
          li( class="rating-#{rating.id}" id="rating_#{rating.id}")
            h3= rating.food.name

  .columns.small-12.large-5
